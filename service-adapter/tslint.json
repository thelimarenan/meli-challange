{
  "extends": "tslint:recommended",
  "rulesDirectory": ["./src"],
  "rules": {
      "max-line-length": {
          "options": [120]
      },
      "new-parens": true,
      "no-arg": true,
      "no-bitwise": true,
      "no-conditional-assignment": true,
      "no-consecutive-blank-lines": false,
      "no-trailing-whitespace": false,
      "no-var-requires": false,
      "typedef": [true, "call-signature", "variable-declaration"],
      "no-console": {
          "severity": "warning",
          "options": ["debug", "info", "log", "time", "timeEnd", "trace"]
      }
  },
  "jsRules": {
      "max-line-length": {
          "options": [120]
      }
  }
}